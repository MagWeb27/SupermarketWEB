@page
@model SupermarketWeb.Pages.Sales.SalesModel
@{
    ViewData["Title"] = "Sales";
}

<h1>Sales</h1>

<form method="get">
    <div class="form-group">
        <input type="text" class="form-control" name="searchString" placeholder="Buscar producto">
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Precio</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
            </tr>
        }
    </tbody>
</table>
